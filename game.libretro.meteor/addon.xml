<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro..meteor"
		name="GBA (Meteor)"
		version="1.4.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import controller="game.controller.gba" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.meteor.so"
                   library_linux="game.libretro.meteor.so"
                   library_osx="game.libretro.meteor.dylib"
                   library_windx="game.libretro.meteor.dll"
                   library_wingl="game.libretro.meteor.dll">
		<platforms>Game Boy Advance</platforms>
		<extensions>gba</extensions>
		<supports_vfs>true</supports_vfs>
		<supports_no_game>false</supports_no_game>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Meteor GBA v1.4</summary>
		<description>Meteor is a Nintendo Gameboy Advance emulator.

Supported files: .gba

Authors: Philippe Daouadi &lt;p.daouadi@free.fr&gt;, Hans-Kristian Arntzen (libretro port and fixes) &lt;maister@archlinux.us&gt;

License: GPLv3</description>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
