<?xml version="1.0" encoding="UTF-8"?>
<addon id="gameclient.meteor"
		name="Meteor GBA"
		version="1.4.0"
		provider-name="Libretro">
	<requires>
		<import addon="xbmc.libretro" version="1.0.0"/>
	</requires>
	<extension point="xbmc.gameclient"
			library_android=""
			library_linux="meteor_libretro.so"
			library_osx=""
			library_windx=""
			library_wingl="">
		<platforms>Game Boy Advance</platforms>
		<extensions>gba</extensions>
		<allowvfs>true</allowvfs>
		<blockextract>false</blockextract>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Meteor GBA v1.4</summary>
		<description>Meteor is a Nintendo Gameboy Advance emulator.

Supported files: .gba

Authors: Philippe Daouadi &lt;p.daouadi@free.fr&gt;, Hans-Kristian Arntzen (libretro port and fixes) &lt;maister@archlinux.us&gt;

Source: https://github.com/libretro/meteor-libretro</description>
		<platform>linux</platform>
		<noicon>true</noicon>
		<nofanart>true</nofanart>
		
	</extension>
</addon>